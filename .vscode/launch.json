{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Launch Camel MCP Component",
      "request": "launch",
      "mainClass": "org.apache.camel.main.Main",
      "projectName": "camel-mcp",
      "args": [
        "-Dcamel.main.routesIncludePattern=file:src/test/resources/routes/*.yaml",
        "-Dcamel.context.name=camel-mcp-test"
      ],
      "env": {
        "CAMEL_LOG_LEVEL": "DEBUG"
      },
      "console": "integratedTerminal"
    }
  ]
}

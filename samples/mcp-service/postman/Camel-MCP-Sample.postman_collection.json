    {
      "name": "MCP Apps Bridge (UI)",
      "item": [
        {
          "name": "UI / Initialize",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Has sessionId', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.result.sessionId).to.exist;",
                  "    pm.collectionVariables.set('ui_session_id', jsonData.result.sessionId);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/mcp",
              "host": ["{{base_url}}"],
              "path": ["mcp"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": \"ui-init-1\",\n  \"method\": \"ui/initialize\",\n  \"params\": {\n    \"clientInfo\": {\n      \"name\": \"postman-ui-client\",\n      \"version\": \"1.0.0\"\n    },\n    \"resourceUri\": \"mcp://resource/chart-editor.html\",\n    \"toolName\": \"chart-editor\"\n  }\n}"
            }
          },
          "response": []
        },
        {
          "name": "UI / Message",

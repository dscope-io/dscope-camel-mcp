            "body": {
              "mode": "raw",
              "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": \"ui-msg-1\",\n  \"method\": \"ui/message\",\n  \"params\": {\n    \"sessionId\": \"{{ui_session_id}}\",\n    \"type\": \"user-action\",\n    \"payload\": {\n      \"action\": \"chart-type-changed\",\n      \"newValue\": \"line\"\n    }\n  }\n}"
            }
          },
          "response": []
        },
